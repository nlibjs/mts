{
  "name": "@nlib/mts",
  "description": "Thin .mts loader and test runner",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://gojabako.zone"
  },
  "homepage": "https://github.com/nlibjs/mts",
  "repository": "https://github.com/nlibjs/mts",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "files": [
    "loader.mjs",
    "test.mjs"
  ],
  "main": "./loader.mjs",
  "bin": {
    "mts-test": "./test.mjs",
    "nlib-mts-test": "./test.mjs"
  },
  "scripts": {
    "lint": "eslint loader.mjs test",
    "test": "run-s test:*",
    "test:directory": "node test.mjs test/directory",
    "test:pattern": "node test.mjs \"test/directory/**/*.test.mts\"",
    "test:file": "node test.mjs \"test/directory/add.test.mts\"",
    "test:exclude": "node test.mjs --exclude \"**/excluded\" -- test/exclude",
    "version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "commander": "11.0.0",
    "esbuild": "0.19.2",
    "micromatch": "4.0.5"
  },
  "devDependencies": {
    "@nlib/changelog": "0.3.1",
    "@nlib/eslint-config": "3.20.1",
    "@nlib/githooks": "0.2.0",
    "@nlib/lint-commit": "1.0.1",
    "@types/node": "20.5.7",
    "eslint": "8.48.0",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3"
  },
  "eslintConfig": {
    "extends": "@nlib/eslint-config",
    "env": {
      "node": true
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
